@page
@model RazorHotelDB.Pages.Hotels.AddHotelModel
@{
    ViewData["title"] = "Create hotel";
}

@*bruges til at få input så man nemmere kan oprette et hotel*@
<h1> create hotel </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Hotel.HotelNr" class="control-label" ></label>
                <input readonly asp-for="@Model.Hotel.HotelNr" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Hotel.Navn" class="control-label"></label>
                <input asp-for="@Model.Hotel.Navn" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="@Model.Hotel.Adresse" class="control-label"></label>
                <input asp-for="@Model.Hotel.Adresse" class="form-control" />

            </div>
            <div class="form-group">
                <a asp-page="GetAllHotels" class="btn btn-primary"> Cancel </a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>

</div>