@page
@model RazorHotelDB.Pages.Hotels.DeleteHotelModel
@{
    ViewData["title"] = "DeleteHotel";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Hotel.HotelNr"></label>
                <input readonly asp-for="@Model.Hotel.HotelNr" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Hotel.Navn"></label>
                <input readonly asp-for="@Model.Hotel.Navn" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Hotel.Adresse"></label>
                <input readonly asp-for="@Model.Hotel.Adresse" class="form-control" />
            </div>
            <div class="form-group">
                <a asp-page="GetAllHotels" class="btn btn-primary"> Cancel </a>
                <input type="submit" value="delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>